{
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
		}
	},
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:2": {}

	},
    "customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"GitHub.copilot",
				"ms-python.python",
				"ms-python.mypy-type-checker",
				"ms-python.black-formatter",
				"ms-azuretools.vscode-docker"
			]
		},
		"codespaces": {
			"repositories": {
				// allow Codespaces to pull from separate repo when user has access
				"ansys-internal/ansys-tools-local-product-launcher": {
					"permissions": {
						"contents": "read"
					}
				},
				"ansys-internal/ansys-tools-filetransfer": {
					"permissions": {
						"contents": "read"
					}
				}
			},
			"openFiles": [
				".devcontainer/README.md"
			]
		}
	},
	"postCreateCommand": "./.devcontainer/postCreate.sh"
	// "postAttachCommand": "poetry shell"
}
